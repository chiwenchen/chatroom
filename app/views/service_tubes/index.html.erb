<p id="notice"><%= notice %></p>

<h1>Service Tubes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_tubes.each do |service_tube| %>
      <tr>
        <td><%= service_tube.name %></td>
        <td><%= link_to 'Show', service_tube %></td>
        <td><%= link_to 'Edit', edit_service_tube_path(service_tube) %></td>
        <td><%= link_to 'Destroy', service_tube, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

